        xmlns:local="clr-namespace:ModbusTCPClient"
        mc:Ignorable="d"
        Title="Program info" Height="194" Width="500"
        Style="{StaticResource ChildWindowStyle}"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
